<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_complaint_detail"
    android:background="@drawable/fondo2"
    android:padding="25dp"
    android:paddingTop="10dp"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context="appdatamx.hackcolima.roberto.reporta.ui.activities.ComplaintDetail">

    <LinearLayout
        android:layout_weight="50"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="100">

        <LinearLayout
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ImageView
                android:id="@+id/complaintImage"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <RelativeLayout
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/complaintDate"
                android:layout_gravity="end"
                android:layout_marginRight="9dp"
                android:text="16 octubre 2015"
                android:textColor="@color/gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="9dp" />

            <TextView
                android:id="@+id/texttodescription"
                android:layout_width="wrap_content"
                android:layout_gravity="start"
                android:gravity="start"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:textColor="@color/gray"
                android:padding="10dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/complaintDate"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_above="@+id/lLlikes"/>

            <LinearLayout
                android:id="@+id/lLlikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">

                <ImageView
                    android:layout_gravity="end"
                    android:layout_marginRight="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/like"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="9dp"
                    android:id="@+id/imageView" />

                <ImageView
                    android:layout_gravity="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dislike"
                    android:layout_marginRight="11dp"
                    android:layout_marginEnd="11dp" />
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_weight="50"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="100"
        android:background="@color/black_op">

        <ListView
            android:id="@+id/lvcomments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>


</LinearLayout>